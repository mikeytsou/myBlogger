<% include ../partials/header %>

<div class="ui huge header"><%= post.title %></div>
<div class="ui top attached very">
  <div class="item">
    <img class="ui centered rounded image" src="<%= post.image %>">

    <div class="content">
      <p><%= post.createdAt.toDateString() %> by <%= post.author.username %></p>
    </div>

    <div class="description">
      <p><%- post.body %></p>
    </div>

    <a class="ui inverted red button" href="/posts/<%= post._id %>/edit">Edit Post</a>

    <form id="delete" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
      <button class="ui inverted red button">Delete</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>