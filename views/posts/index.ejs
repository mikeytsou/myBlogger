<% include ../partials/header %>

<div class="ui very divided relaxed items">
  <% posts.forEach(function(post) { %>
    <div class="padded item">
      <div class="image">
        <% if (post.image) { %>
          <img id="image-border" src="<%= post.image %>">
        <% } %>
      </div>

      <div class="content">
        <div class="header"><%= post.title %></div>

        <div class="meta">
          <span><%= post.createdAt.toDateString() %> by <a href="/users/<%= post.author.id %>"><u><%= post.author.username %></u></a></span>
        </div>

        <div class="description">
          <p><span><%= post.description %></span></p>
        </div>

        <div class="extra">
          <a href="/posts/<%= post._id %>" class="ui floated inverted blue mini button">Read More</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<% include ../partials/footer %>