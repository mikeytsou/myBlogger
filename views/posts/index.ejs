<% include ../partials/header %>

<div class="ui top attached">
  <div class="ui divided items">
    <% posts.forEach(function(post) { %>
      <div class="item">
        <div class="image">
          <img src="<%= post.image %>">
        </div>

        <div class="content">
          <a href="" class="header"><%= post.title %></a>

          <div class="meta">
            <span><%= post.createdAt.toDateString() %></span>
          </div>

          <div class="description" id="post-body">
            <p><span><%- post.body.substring(0, 150) %>...</span></p>
          </div>

          <div class="extra">
            <a href="" class="ui floated inverted blue button mini">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>